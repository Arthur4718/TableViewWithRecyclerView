<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <HorizontalScrollView
       android:id="@+id/headerScroll"
       android:layout_width="0dp"
       android:layout_height="@dimen/header_height"
       android:layout_marginStart="0dp"
       android:layout_marginTop="0dp"
       app:layout_constraintStart_toEndOf="@+id/fixedCollum"
       app:layout_constraintTop_toTopOf="parent">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="@color/colorPrimary"
          android:orientation="horizontal">

         <TextView
             android:id="@+id/txtName"
             android:layout_width="@dimen/cell_width"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin"
             android:gravity="center|start"
             android:text="@string/name"
             android:textAllCaps="true"
             android:textColor="@android:color/white"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/txtLogo"
             android:layout_width="@dimen/cell_width"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin"
             android:gravity="center|start"
             android:text="@string/logo"
             android:textAllCaps="true"
             android:textColor="@android:color/white"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/txtLocation"
             android:layout_width="@dimen/cell_width"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin"
             android:gravity="center|start"
             android:text="@string/location"
             android:textAllCaps="true"
             android:textColor="@android:color/white"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/txtStadiumName"
             android:layout_width="@dimen/cell_width"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin"
             android:gravity="center|start"
             android:text="@string/stadium"
             android:textAllCaps="true"
             android:textColor="@android:color/white"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/txtLeagueName"
             android:layout_width="@dimen/cell_width"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin"
             android:gravity="center|start"
             android:text="@string/league"
             android:textAllCaps="true"
             android:textColor="@android:color/white"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/txtCoachName"
             android:layout_width="@dimen/cell_width"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin"
             android:gravity="center|start"
             android:text="@string/coach"
             android:textAllCaps="true"
             android:textColor="@android:color/white"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/txtStarPlayerName"
             android:layout_width="@dimen/cell_width"
             android:layout_height="match_parent"
             android:layout_marginStart="@dimen/margin"
             android:gravity="center|start"
             android:text="@string/star"
             android:textAllCaps="true"
             android:textColor="@android:color/white"
             android:textStyle="bold" />

      </LinearLayout>

   </HorizontalScrollView>

   <LinearLayout
       android:id="@+id/fixedCollum"
       android:layout_width="100dp"
       android:layout_height="0dp"
       android:background="@color/colorPrimary"
       android:orientation="vertical"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

       <TextView
           android:id="@+id/txtFixedPosition"
           android:layout_width="100dp"
           android:layout_height="@dimen/header_height"
           android:gravity="center"
           android:text="@string/name"
           android:textAllCaps="true"
           android:textColor="@android:color/white"
           android:textStyle="bold" />




   </LinearLayout>


   <android.support.v7.widget.RecyclerView
       android:id="@+id/rvClub"
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_marginStart="0dp"
       android:layout_marginTop="0dp"
       android:layout_marginEnd="0dp"
       android:layout_marginBottom="0dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/fixedCollum"
       app:layout_constraintTop_toBottomOf="@+id/headerScroll">

   </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>